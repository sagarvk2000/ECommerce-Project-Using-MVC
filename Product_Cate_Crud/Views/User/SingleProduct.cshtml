                        <div class="carousel-item active">
                           <img src="@Url.Content(Model.Imageurl)" height="250" width="250" />
                      </div>
                    </div>
                    <br />
                    <br />
                   <a href="/Cart/AddToCart/@Model.Id" class="btn btn-warning "><i class="fa fa-shopping-cart" aria-hidden="true"></i>Add To Cart</a>
                   <a href="#" class="btn btn-success "><i class="fa fa-bolt" aria-hidden="true"></i>Buy Now</a>


                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
